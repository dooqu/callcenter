<script type="text/javascript">

    /*
    * 说明：1、本页面的效果已通过IE8、IE9、IE10、FireFox、Safari 等浏览器的测试，如果套用效果与效果图有任何的差别，请认真核查；
    *       2、页面底部的脚本代码是必须存在的并且不能做任何的修改；
    *       3、左边菜单上的属性 name="menu" 是必须项
    *       4、左边菜单上的样式事件已写完整 光标样式 “样式” + “_hover”,选中样式 “样式” + "_a"
    */

    $(document).ready(function () {
        $(".div_oms_main,.div_oms_main_left").height($(window).height()-5);
        $(".div_oms_main_exit").hoverEvent();
        $(".frm_Content").height($(window).height() - $(".div_oms_content_site").height() - 3);
        $(".div_model_exit").click(function () {
            window.location.href = '@Url.Content("~/Verification/Index")';
        });
    });
    

    function ShowContent(url,isPoped) {
        if (url != '') {
            if (isPoped == 'True' || isPoped == 'true') {
                window.location.href = "@Url.Content("~/")" + url;
            }
            else {
                $(".frm_Content").attr("src", url);
            }
        }
    }
    
</script>