@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model callcenter.modal.ServiceUserInfo
@using callcenter.modal
<div class="div_oms_main">
    <div class="div_oms_main_left">
        <div class="div_content_logo"></div>
        <div class="div_oms_content_logo"></div>
        @Html.HiddenFor(r => r.Function1)
        <!-- 菜单 -->
        @if ( @Model.Function1) { 
        <div class="div_main_left_menu_01_a" name="menu" onclick="ShowContent('@Url.Content("JobIndex/0")', 'false');">贷款结清证明申请<span id="f0" class="btn_maint_menu_top">(2)</span></div>
        }
        @if ( @Model.Function2) {
        <div class="div_main_left_menu_02" name="menu" onclick="ShowContent('@Url.Content("JobIndex/1")', 'false');">手机号变更申请<span id="f1" class="btn_maint_menu_top">(2)</span></div>
        }
        @if ( @Model.Function3) {
        <div class="div_main_left_menu_03" name="menu" onclick="ShowContent('@Url.Content("JobIndex/2")', 'false');">银行卡变更申请<span id="f2" class="btn_maint_menu_top">(2)</span></div>
        }
        @if ( @Model.Function4) {
        <div class="div_main_left_menu_04" name="menu" onclick="ShowContent('@Url.Content("JobIndex/3")', 'false');">征信查询核实申请<span id="f3" class="btn_maint_menu_top">2</span></div>
        }
        @if ( @Model.Function5) {
        <div class="div_main_left_menu_05" name="menu" onclick="ShowContent('@Url.Content("~/SUser")', 'false');">账号管理</div>
        }
        @if (@Model.Function6)
        {
            <div class="div_main_left_menu_06" name="menu" onclick="ShowContent('@Url.Content("~/Ad")', 'false');">广告管理</div>
        }
    </div>
    <div class="div_oms_main_right">
        <div class="div_oms_user_site">
            <div class="div_oms_user_info"></div>
            <div class="div_oms_user_info_login">
               @Model.UserName
            </div>
        </div>

        <div class="div_oms_content_site">
            <div class="div_oms_content_site_02" id="Navigator"></div>
            <div class="div_model_exit"></div>
            <div class="div_site_com" id="EntityInfo"></div>
        </div>
        <div class="div_oms_menu_barNew_site">
           
        </div>
        <iframe src="" frameborder="0" framespacing="0" class="frm_Content" width="100%" height="100%"></iframe>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        if ($("#Function1").val()) {
            $(".frm_Content").attr("src", '@Url.Content("JobIndex/0")');
        }
    });

    setInterval("myInterval()", 30000);//1000为1秒钟
    var newMsgCount = 0;
    function myInterval() {
        $.post("@Url.Action("GetNewMsgList", "MaintManage")", null, function (data) {
            if (data.newMsgList.length > 0)
            {
                 
                var count = data.newMsgList.length
                $("#menu_MsgCount").html("<div id='menu_MsgCount' class='btn_maint_menu_top'>" + count + "</div>");
                var html = "";
                for (var i = 0; i < data.newMsgList.length; i++) {
                    html += "<li style=\" height:auto;margin:0px; padding:0px; width:100%;\">" + data.newMsgList[i].MsgTitle + "</li>";
                }
                if ($('.div_dialog_close').length == 0) {

                    $("#Menu_xiaoxi ul").html(html);
                    //$("#Menu_xiaoxi").css({ left: $("#menu_MsgCount").offsetLeft + 200, top: $("#menu_MsgCount").offsetTop + 100 });
                    //$('#Menu_xiaoxi').show();
                    $('#Menu_xiaoxi').show().delay(10000).hide(0);

                }
                newMsgCount = count;
            }
            if (data.newMsgList.length == 0) {
                newMsgCount = 0;
                $("#menu_MsgCount").html("");
            }

        }, "json")
    }
</script>